#@apikey = your_key

###

# Get all events
GET {{baseUrl}}/schedule HTTP/1.1

###

# Get event plan
GET {{baseUrl}}/schedule/plan HTTP/1.1

###

# Get event '1'
GET {{baseUrl}}/schedule/1 HTTP/1.1

###

# Remove event '1'
DELETE {{baseUrl}}/schedule/1 HTTP/1.1

###

# Create a new event to start the charge
POST {{baseUrl}}/schedule HTTP/1.1
Content-Type: application/json

{
  "state": "active",
  "time": "10:00:00",
  "days": [
    "monday"
  ]
}

###

# Create multiple new events
POST {{baseUrl}}/schedule HTTP/1.1
Content-Type: application/json

[
  {
    "state": "disable",
    "time": "21:13:00",
    "days": [
      "monday",
      "tuesday",
      "wednesday",
      "thursday",
      "friday",
      "saturday",
      "sunday"
    ]
  },
  {
    "state": "active",
    "time": "21:12:00",
    "days": [
      "monday",
      "tuesday",
      "wednesday",
      "thursday",
      "friday",
      "saturday",
      "sunday"
    ]
  }
]

